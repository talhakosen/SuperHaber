<resources>

    <style name="myAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="text_primary" parent="text_default">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="text_primary.bold" parent="text_primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_primary.title" parent="text_primary">
        <item name="android:textSize">@dimen/default_text_title_size</item>
    </style>

    <style name="text_primary.title.bold" parent="text_primary.title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_secondy" parent="text_default">
        <item name="android:textColor">@color/text_color_secondry</item>
    </style>

    <style name="text_secondy.title" parent="text_secondy">
        <item name="android:textSize">@dimen/default_text_title_size</item>
    </style>

    <style name="text_secondy.title.bold" parent="text_secondy.title">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text_tertiary" parent="text_default">
        <item name="android:textColor">@color/text_color_tertiary</item>
    </style>

    <style name="text_tertiary.title" parent="text_tertiary">
        <item name="android:textSize">@dimen/default_text_title_size</item>
    </style>

    <style name="text_tertiary.title.bold" parent="text_tertiary.title">
        <item name="android:textStyle">bold</item>
    </style>



    <style name="navigation_drawer_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="navigation_drawer_text" parent="text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/drawerItemText</item>
    </style>

    <style name="navigation_drawer_item" parent="text_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>



</resources>
